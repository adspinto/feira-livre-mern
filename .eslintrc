{
  "extends": ["airbnb-base", "prettier", "plugin:jest/recommended"],
  "env": {
    "node": true,
    "jest/globals": true
  },
  "plugins": ["prettier", "jest"],
  "rules": {
    "no-debugger": 0,
    "import/no-extraneous-dependencies": 0,
    "no-underscore-dangle": 0,
    "import/no-dynamic-require": 0,
    "no-console": 0,
    "global-require": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100
      }
    ]
  }
}
